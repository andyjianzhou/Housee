# Database Configuration
# ---------------------
# PostgreSQL connection URL format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://user:password@db:5432/dbname
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_NAME=your_production_db_name
DB_HOST=your_production_db_host
DB_PORT=5432

# API Configuration
# ----------------
PORT=4000
API_VERSION=v1
NODE_ENV=production
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# API rate limiting (requests per minute)
RATE_LIMIT=100

# Authentication & Security
# ------------------------
# JWT secret key (min 32 characters)
JWT_SECRET=your_jwt_secret_key_min_32_chars
# JWT token expiration in hours
JWT_EXPIRES_IN=24
# BCrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=12

# Logging & Monitoring
# -------------------
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# External Services
# ----------------
# AWS S3 Configuration (if using file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_bucket_name

# Cache Configuration
# ------------------
# Redis connection URL (if using Redis)
REDIS_URL=redis://redis:6379
# Cache TTL in seconds
CACHE_TTL=3600

# Email Configuration
# ------------------
# SMTP settings for sending emails
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
# Default from email address
EMAIL_FROM=noreply@yourdomain.com

# Feature Flags
# -------------
# Enable/disable specific features (true/false)
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false

